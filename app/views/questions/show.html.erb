<%= @question.description %>
<% choices = @question.choices %>

<%= form_tag(explain_question_path(@question), method: :get) do %>

<% choices.each do |choice| %>
<%= radio_button_tag :choice, choice.choice_number %>
<%= label_tag "choice_#{choice.choice_number}",
  content_tag(:pre, choice.description)
 %>
<% end %>
<p>
<%= submit_tag("解答する") %>
</p>
<% end %>

