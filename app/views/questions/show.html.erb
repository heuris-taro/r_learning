<%= sanitize @question.description %>

<%= form_tag(explain_question_path(@question), method: :get) do %>
  <%= render @question.choices %>
  <div class='clear-fix'></div>
  <%= submit_tag("解答する") %>
  <%= link_to '次の問題', exercise_start_path %>
  <% if session[:user_id] %>
  <%= link_to '問題一覧', questions_path %>
  <% end %>
<% end %>

